<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="547.0" prefWidth="834.0" spacing="20.0" stylesheets="@../style/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.aceking.wikipediasearch.controller.WikiSearchController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ListView fx:id="resultsview" visible="false">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
   </ListView>
    <TextField fx:id="searchBox" alignment="CENTER" prefWidth="200.0" promptText="Enter search word">
      <font>
         <Font name="Roboto" size="13.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin></TextField>
    <Button fx:id="searchButton" onAction="#onHelloButtonClick" text="Hello!" />
</VBox>
